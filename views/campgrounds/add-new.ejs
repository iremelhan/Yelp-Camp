<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center mb-5" style="color: #141e61">New Campground</h1>
  <div class="mx-auto">
    <form
      action="/campgrounds"
      method="POST"
      class="validate-form campground-form"
      enctype="multipart/form-data"
      novalidate
    >
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
      </div>
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
      </div>
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <label for="image" class="form-label">Upload Images</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
          required
        />
      </div>
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            name="campground[price]"
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            required
          />
        </div>
      </div>
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        ></textarea>
      </div>
      <div class="mb-3 col-sm-6 col-12 mx-auto">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>
